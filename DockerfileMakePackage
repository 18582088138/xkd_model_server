ARG BUILD_IMAGE=ovms-centos:latest

FROM $BUILD_IMAGE

ARG ov_use_binary=1

RUN mkdir /patchelf && cd /patchelf && \
	wget https://github.com/NixOS/patchelf/archive/0.10.tar.gz && \
	tar -xf 0.10.tar.gz && ls -lah && cd */ && \
	./bootstrap.sh && ./configure && make && make install

RUN mkdir -vp /ovms_release/bin
RUN mkdir -vp /ovms_release/lib
RUN cp /ovms/metadata.json /ovms_release/

RUN if [ "$ov_use_binary" == "0" ] ; then true ; else exit 0 ; fi ; cp /openvino/bin/intel64/Release/lib/plugins.xml /ovms_release/lib/
RUN if [ "$ov_use_binary" == "1" ] ; then true ; else exit 0 ; fi ; cp /opt/intel/openvino/deployment_tools/inference_engine/lib/intel64/plugins.xml /ovms_release/lib/

RUN find /ovms/bazel-out/k8-*/bin -iname '*.so*' -type f -exec cp -v {} /ovms_release/lib/ \;

RUN if [ "$ov_use_binary" == "0" ] ; then true ; else exit 0 ; fi ; find /openvino/ -iname '*.so*' -type f -exec cp -v {} /ovms_release/lib/ \;
RUN if [ "$ov_use_binary" == "1" ] ; then true ; else exit 0 ; fi ; find /opt/intel/openvino/deployment_tools/inference_engine/lib/intel64/ -iname '*.so*' -type f -exec cp -v {} /ovms_release/lib/ \;
RUN if [ "$ov_use_binary" == "1" ] ; then true ; else exit 0 ; fi ; find /opt/intel/openvino/deployment_tools/inference_engine/external/ -iname '*.so*' -type f -exec cp -v {} /ovms_release/lib/ \;
RUN if [ "$ov_use_binary" == "1" ] ; then true ; else exit 0 ; fi ; find /opt/intel/openvino/deployment_tools/ngraph/lib/ -iname '*.so*' -type f -exec cp -v {} /ovms_release/lib/ \;
RUN if [ "$ov_use_binary" == "1" ] ; then true ; else exit 0 ; fi ; find /opt/intel/openvino/deployment_tools/inference_engine/external/ -iname '*.so*' -type f -exec cp -v {} /ovms_release/lib/ \;
RUN if [ "$ov_use_binary" == "1" ] ; then true ; else exit 0 ; fi ; cp -v /opt/intel/openvino/deployment_tools/inference_engine/lib/intel64/usb-ma2450.mvcmd /ovms_release/lib/

RUN find /ovms/bazel-bin/src -name 'ovms' -type f -exec cp -v {} /ovms_release/bin \;
WORKDIR /ovms_release/bin
RUN patchelf --remove-rpath ./ovms && patchelf --set-rpath '$ORIGIN/../lib/' ./ovms
RUN find /ovms_release/lib/ -iname '*.so*' -type f -exec patchelf --debug --remove-rpath  {}  \;
RUN find /ovms_release/lib/ -iname '*.so*' -type f -exec patchelf --debug --set-rpath '$ORIGIN/../lib' {} \;

WORKDIR /ovms
RUN cp -v `ldd /ovms_release/bin/ovms | grep 'libstdc++' | cut -d'>' -f2 | cut -d' ' -f2` /ovms_release/lib
RUN cp -v `ldd /ovms_release/bin/ovms | grep 'libgcc' | cut -d'>' -f2 | cut -d' ' -f2` /ovms_release/lib
RUN cp -v `ldd /ovms_release/bin/ovms | grep 'libssl' | cut -d'>' -f2 | cut -d' ' -f2` /ovms_release/lib
RUN cp -v `ldd /ovms_release/bin/ovms | grep 'libcrypto' | cut -d'>' -f2 | cut -d' ' -f2` /ovms_release/lib
RUN cp -v `ldd /ovms_release/bin/ovms | grep 'libusb' | cut -d'>' -f2 | cut -d' ' -f2` /ovms_release/lib || true
RUN cp -v `ldd /ovms_release/bin/ovms | grep 'libboost' | cut -d'>' -f2 | cut -d' ' -f2` /ovms_release/lib || true
RUN cp -v `ldd /ovms_release/bin/ovms | grep 'libnuma' | cut -d'>' -f2 | cut -d' ' -f2` /ovms_release/lib || true

RUN ls -lahR /ovms_release/

RUN find /ovms_release/lib/ -iname '*.so*' -type f -exec patchelf --remove-rpath  {}  \;
RUN find /ovms_release/lib/ -iname '*.so*' -type f -exec patchelf --set-rpath '$ORIGIN/../lib' {} \;

WORKDIR /
RUN tar czf ovms.tar.gz --transform 's/ovms_release/ovms/' /ovms_release/ && sha256sum ovms.tar.gz > ovms.tar.gz.sha256 && cp /ovms_release/metadata.json /ovms.tar.gz.metadata.json

ENTRYPOINT [ ]
