ARG PKG_IMAGE 
ARG DIST_IMAGE

FROM $PKG_IMAGE as prepare_pkg

RUN ls -lahR /ovms

FROM $DIST_IMAGE

RUN yum install -y curl openssl ca-certificates libusb libusbx-devel libxml2 libxml2 numactl-libs && yum clean all && cp /etc/ssl/certs/ca-bundle.crt /etc/ssl/certs/ca-certificates.crt

RUN mkdir /ovms/
COPY --from=prepare_pkg ovms.tar.gz /
RUN tar -xf ovms.tar.gz && rm ovms.tar.gz

RUN groupadd --gid 5000 ovms && useradd --home-dir /home/ovms --create-home --uid 5000 \
             --gid 5000 --shell /bin/sh --skel /dev/null ovms

RUN chmod -R ovms:ovms /ovms
USER ovms

RUN /ovms/bin/./ovms --help
ENTRYPOINT ["/ovms/bin/ovms"]
